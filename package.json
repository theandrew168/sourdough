{
	"name": "sourdough",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "esbuild frontend/main.ts --outfile=public/main.js --bundle --serve=127.0.0.1:5000 --servedir=public",
		"build": "tsc && esbuild frontend/main.ts --outfile=public/main.js --bundle --minify",
		"format": "prettier --write frontend/",
		"test": "jest"
	},
	"dependencies": {
		"gl-matrix": "^3.4.3"
	},
	"devDependencies": {
		"@types/jest": "^29.0.3",
		"esbuild": "^0.15.2",
		"jest": "^29.0.3",
		"prettier": "^2.6.2",
		"ts-jest": "^29.0.2",
		"typescript": "^4.8.3",
		"webgl-strict-types": "^1.0.5"
	},
	"jest": {
  	"preset": "ts-jest"
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "all",
		"printWidth": 100
	}
