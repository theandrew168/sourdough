{
	"name": "sourdough",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "npm run build -- --serve=127.0.0.1:5000 --servedir=public",
		"build": "tsc && esbuild frontend/main.js --outfile=public/main.js --bundle --minify",
		"format": "prettier --write frontend/"
	},
	"dependencies": {
		"gl-matrix": "^3.4.3",
		"webgl-obj-loader": "^2.0.8"
	},
	"devDependencies": {
		"esbuild": "^0.15.2",
		"prettier": "^2.6.2",
		"typescript": "^4.7.4",
		"webgl-strict-types": "^1.0.5"
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "all",
		"printWidth": 90
	}
}
