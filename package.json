{
	"name": "sourdough",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build-types": "tsc",
		"build-js": "esbuild frontend/index.ts --outfile=public/index.js --target=es2020 --bundle --minify",
		"build": "npm run build-types && npm run build-js",
		"run-js": "esbuild frontend/index.ts --outfile=public/index.js --target=es2020 --bundle --watch",
		"format": "prettier --write frontend/"
	},
	"dependencies": {
		"gl-matrix": "^3.4.3"
	},
	"devDependencies": {
		"esbuild": "^0.18.13",
		"prettier": "^2.8.8",
		"typescript": "^5.1.6",
		"webgl-strict-types": "^1.0.5"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"printWidth": 120,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "all",
		"useTabs": true
	}
}
